generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  password String
}

model EventType {
  event_type_id    Int     @id @default(autoincrement())
  event_type String

	bookings Booking[]
}

model Package {
  package_id    Int     @id @default(autoincrement())
  package_name String

	bookings Booking[]
}

model Service{
  serv_id     Int     @id @default(autoincrement())
  serv_name   String
  serv_price  Float

  bookings Booking[]  
}

model Venue {
  venue_id      Int     @id @default(autoincrement())
  venue_name    String
  venue_ratings Float?   
  venue_desc    String
  venue_capacity Int
  venue_loc     String
  venue_price   Float
  venue_tags    VenueTag[]

  bookings Booking[]
}

model Tag {
  tag_id  Int      @id @default(autoincrement())
  tag_name  String
  venues     VenueTag[]
}

model VenueTag {
  venue_id Int
  tag_id   Int

  venue Venue @relation(fields: [venue_id], references: [venue_id])
  tag   Tag   @relation(fields: [tag_id], references: [tag_id])

  @@id([venue_id, tag_id])
}

model Booking {
  booking_id     Int        @id @default(autoincrement())

  venue_id       Int
  venue          Venue      @relation(fields: [venue_id], references: [venue_id])

  booking_date   DateTime

  event_type_id  Int
  event_type     EventType  @relation(fields: [event_type_id], references: [event_type_id])

  expected_guest Int
  event_name     String
  description    String?
  request        String?

  package_id     Int
  package        Package    @relation(fields: [package_id], references: [package_id])

  serv_id        Int?
  add_ons        Service?   @relation(fields: [serv_id], references: [serv_id])

  first_name     String
  last_name      String
  email          String
  number         String 
}